<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StitchLens.Web</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" />

    <!-- Add Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />

    <link rel="stylesheet" href="~/StitchLens.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">StitchLens</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pattern" asp-action="Upload">Create Pattern</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Pricing">Pricing</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true) {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    @User.Identity.Name
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="Dashboard">My Account</a></li>
                                    <li><a class="dropdown-item" asp-controller="Account" asp-action="MyPatterns">My Patterns</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5 mb-5">
            @RenderBody()
        </main>
    </div>

    <!-- MASSIVE SPACER - Add this right here -->
    <div style="height: 175px; background-color: white;"></div>

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3 mb-3 mb-md-0">
                    <h5 class="footer-brand">StitchLens</h5>
                    <p class="footer-tagline">
                        Photo to pattern, beautifully simple.
                    </p>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <h6>Product</h6>
                    <ul class="list-unstyled">
                        <li>
                            <a asp-controller="Pattern" asp-action="Upload">
                                <i class="fas fa-upload footer-icon"></i>Create Pattern
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Pricing">
                                <i class="fas fa-tag footer-icon"></i>Pricing
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="HowItWorks">
                                <i class="fas fa-question-circle footer-icon"></i>How It Works
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3 mb-3 mb-md-0">
                    <h6>Legal</h6>
                    <ul class="list-unstyled">
                        <li>
                            <a asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt footer-icon"></i>Privacy Policy
                            </a>
                        </li>
                        <li>
                            <a asp-controller="Home" asp-action="Terms">
                                <i class="fas fa-file-contract footer-icon"></i>Terms of Service
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h6>Support</h6>
                    <ul class="list-unstyled">
                        <li>
                            <a href="mailto:support@stitchlens.com">
                                <i class="fas fa-envelope footer-icon"></i>Contact Us
                            </a>
                        </li>
                        <li>
                            <a href="mailto:hello@stitchlens.com">
                                <i class="fas fa-comment footer-icon"></i>Feedback
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="footer-bottom">
                © @DateTime.Now.Year StitchLens · Made with <i class="fas fa-heart" style="color: var(--color-dusty-rose);"></i> for crafters
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
