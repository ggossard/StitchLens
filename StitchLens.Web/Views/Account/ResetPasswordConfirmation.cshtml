@{
    ViewData["Title"] = "Password Updated";
}

<section class="auth-hero-section">
    <div class="container text-center">
        <div class="auth-icon-badge">
            <i class="fas fa-check"></i>
        </div>
        <h1 class="auth-hero-title">Password Updated</h1>
        <p class="auth-hero-subtitle">Your password has been reset successfully.</p>
    </div>
</section>

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card text-center">
                <a asp-action="Login" class="btn-auth-primary">Sign in</a>
            </div>
        </div>
    </div>
</div>
