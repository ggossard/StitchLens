@{
    ViewData["Title"] = "Check Your Email";
}

<section class="auth-hero-section">
    <div class="container text-center">
        <div class="auth-icon-badge">
            <i class="fas fa-envelope-open-text"></i>
        </div>
        <h1 class="auth-hero-title">Check Your Email</h1>
        <p class="auth-hero-subtitle">If an account exists for that email, password reset instructions have been sent.</p>
    </div>
</section>

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card text-center">
                <p>Didn't receive anything? Check spam or try again in a few minutes.</p>
                <a asp-action="Login" class="btn-auth-primary">Back to sign in</a>
            </div>
        </div>
    </div>
</div>
