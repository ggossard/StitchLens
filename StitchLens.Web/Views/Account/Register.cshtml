@model StitchLens.Web.Models.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<!-- Register Hero Section -->
<section class="auth-hero-section">
    <div class="container">
        <div class="text-center">
            <div class="auth-icon-badge">
                <i class="fas fa-user-plus"></i>
            </div>
            <h1 class="auth-hero-title">Join StitchPhoto</h1>
            <p class="auth-hero-subtitle">
                Start creating beautiful needlepoint patterns today
            </p>
        </div>
    </div>
</section>

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card">

                <!-- Social Login Buttons -->
                <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div class="social-login-section">
                        <button type="submit" name="provider" value="Google" class="btn-social btn-social-google">
                            <i class="fab fa-google"></i>
                            <span>Sign up with Google</span>
                        </button>
                        <button type="submit" name="provider" value="Facebook" class="btn-social btn-social-facebook">
                            <i class="fab fa-facebook-f"></i>
                            <span>Sign up with Facebook</span>
                        </button>
                    </div>
                </form>

                <!-- Divider -->
                <div class="auth-divider">
                    <span>or create account with email</span>
                </div>

                <!-- Traditional Registration Form -->
                <form asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger auth-alert"></div>

                    <div class="auth-form-group">
                        <label asp-for="Email" class="auth-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" class="auth-input" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="auth-error"></span>
                    </div>

                    <div class="auth-form-group">
                        <label asp-for="Password" class="auth-label">
                            <i class="fas fa-lock"></i> Password
                        </label>
                        <input asp-for="Password" class="auth-input" placeholder="Create a password" />
                        <span asp-validation-for="Password" class="auth-error"></span>
                        <small class="auth-hint">
                            <i class="fas fa-info-circle"></i> At least 6 characters with one number
                        </small>
                    </div>

                    <div class="auth-form-group">
                        <label asp-for="ConfirmPassword" class="auth-label">
                            <i class="fas fa-check-circle"></i> Confirm Password
                        </label>
                        <input asp-for="ConfirmPassword" class="auth-input" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="auth-error"></span>
                    </div>

                    <button type="submit" class="btn-auth-primary">
                        <i class="fas fa-user-plus me-2"></i> Create Account
                    </button>

                    <div class="auth-footer-links">
                        <p>
                            Already have an account?
                            <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]">Sign in</a>
                        </p>
                    </div>

                    <div class="auth-legal">
                        By continuing, you agree to our
                        <a asp-controller="Home" asp-action="Terms">Terms</a> and
                        <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}