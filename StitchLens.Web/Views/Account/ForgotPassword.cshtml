@model StitchLens.Web.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<section class="auth-hero-section">
    <div class="container text-center">
        <div class="auth-icon-badge">
            <i class="fas fa-key"></i>
        </div>
        <h1 class="auth-hero-title">Reset Password</h1>
        <p class="auth-hero-subtitle">Enter your account email and we'll send reset instructions.</p>
    </div>
</section>

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card">
                <form asp-action="ForgotPassword" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger auth-alert"></div>

                    <div class="auth-form-group">
                        <label asp-for="Email" class="auth-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" class="auth-input" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="auth-error"></span>
                    </div>

                    <button type="submit" class="btn-auth-primary">
                        <i class="fas fa-paper-plane me-2"></i> Send Reset Link
                    </button>

                    <div class="auth-footer-links">
                        <p><a asp-action="Login">Back to sign in</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
