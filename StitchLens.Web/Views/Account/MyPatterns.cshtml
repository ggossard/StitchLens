@model IEnumerable<StitchLens.Data.Models.Project>
@{
    ViewData["Title"] = "My Patterns";
}

<div class="container mt-4">
    <h2>My Patterns</h2>
    <p class="lead">View and download your created patterns</p>

    @if (!Model.Any()) {
        <div class="alert alert-info mt-4">
            <h5>No patterns yet!</h5>
            <p>You haven't created any patterns yet.</p>
            <a asp-controller="Pattern" asp-action="Upload" class="btn btn-primary">
                Create Your First Pattern
            </a>
        </div>
    }
    else {
        <div class="row mt-4">
            @foreach (var project in Model) {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        @if (!string.IsNullOrEmpty(project.ProcessedImagePath) && System.IO.File.Exists(project.ProcessedImagePath)) {
                            <img src="/uploads/@System.IO.Path.GetFileName(project.ProcessedImagePath)"
                                 class="card-img-top"
                                 alt="@project.Title"
                                 style="height: 200px; object-fit: cover;">
                        }
                        else if (!string.IsNullOrEmpty(project.OriginalImagePath) && System.IO.File.Exists(project.OriginalImagePath)) {
                            <img src="/uploads/@System.IO.Path.GetFileName(project.OriginalImagePath)"
                                 class="card-img-top"
                                 alt="@project.Title"
                                 style="height: 200px; object-fit: cover;">
                        }
                        else {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center"
                                 style="height: 200px;">
                                <span class="text-white">No Preview</span>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title">@project.Title</h5>
                            <ul class="list-unstyled small">
                                <li><strong>Size:</strong> @project.WidthInches.ToString("F1")" × @project.HeightInches.ToString("F1")"</li>
                                <li><strong>Mesh:</strong> @project.MeshCount count</li>
                                <li><strong>Colors:</strong> @project.MaxColors</li>
                                @if (project.YarnBrand != null) {
                                    <li><strong>Yarn:</strong> @project.YarnBrand.Name</li>
                                }
                                <li><strong>Created:</strong> @project.CreatedAt.ToLocalTime().ToString("MMM d, yyyy")</li>
                            </ul>

                            <div class="d-grid gap-2">
                                <a asp-controller="Pattern" asp-action="Preview" asp-route-id="@project.Id"
                                   class="btn btn-primary btn-sm">
                                    View Pattern
                                </a>
                                @if (!string.IsNullOrEmpty(project.ProcessedImagePath)) {
                                    <a asp-controller="Pattern" asp-action="DownloadPdf" asp-route-id="@project.Id"
                                       class="btn btn-success btn-sm">
                                        Download PDF
                                    </a>
                                }
                            </div>
                        </div>

                        <div class="card-footer text-muted small">
                            <span class="badge bg-secondary">@project.StitchType</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>