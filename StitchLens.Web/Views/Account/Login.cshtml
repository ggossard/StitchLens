@model StitchLens.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<!-- Login Hero Section -->
<section class="auth-hero-section">
    <div class="container">
        <div class="text-center">
            <div class="auth-icon-badge">
                <i class="fas fa-door-open"></i>
            </div>
            <h1 class="auth-hero-title">Welcome Back!</h1>
            <p class="auth-hero-subtitle">
                Sign in to continue your creative journey
            </p>
        </div>
    </div>
</section>

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card">

                <!-- Social Login Buttons -->
                <form asp-action="ExternalLogin" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div class="social-login-section">
                        <button type="submit" name="provider" value="Google" class="btn-social btn-social-google">
                            <i class="fab fa-google"></i>
                            <span>Continue with Google</span>
                        </button>
                        <button type="submit" name="provider" value="Facebook" class="btn-social btn-social-facebook">
                            <i class="fab fa-facebook-f"></i>
                            <span>Continue with Facebook</span>
                        </button>
                    </div>
                </form>

                <!-- Divider -->
                <div class="auth-divider">
                    <span>or sign in with email</span>
                </div>

                <!-- Traditional Login Form -->
                <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger auth-alert"></div>

                    <div class="auth-form-group">
                        <label asp-for="Email" class="auth-label">
                            <i class="fas fa-envelope"></i> Email Address
                        </label>
                        <input asp-for="Email" class="auth-input" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="auth-error"></span>
                    </div>

                    <div class="auth-form-group">
                        <label asp-for="Password" class="auth-label">
                            <i class="fas fa-lock"></i> Password
                        </label>
                        <input asp-for="Password" class="auth-input" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="auth-error"></span>
                    </div>

                    <div class="auth-checkbox">
                        <input asp-for="RememberMe" class="auth-checkbox-input" id="rememberMe" />
                        <label asp-for="RememberMe" class="auth-checkbox-label" for="rememberMe">
                            Keep me signed in
                        </label>
                    </div>

                    <button type="submit" class="btn-auth-primary">
                        <i class="fas fa-sign-in-alt me-2"></i> Sign In
                    </button>

                    <div class="auth-footer-links">
                        <p>
                            Don't have an account?
                            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Create one</a>
                        </p>
                        <p>
                            <a asp-action="ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>

                    <div class="auth-legal">
                        By continuing, you agree to our
                        <a asp-controller="Home" asp-action="Terms">Terms</a> and
                        <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
