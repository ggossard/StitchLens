@model StitchLens.Web.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Set New Password";
}

<section class="auth-hero-section">
    <div class="container text-center">
        <div class="auth-icon-badge">
            <i class="fas fa-unlock-alt"></i>
        </div>
        <h1 class="auth-hero-title">Set a New Password</h1>
        <p class="auth-hero-subtitle">Choose a secure password for your account.</p>
    </div>
</section>

<div class="container auth-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="auth-card">
                <form asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="All" class="alert alert-danger auth-alert"></div>

                    <input asp-for="Token" type="hidden" />
                    <input asp-for="Email" type="hidden" />

                    <div class="auth-form-group">
                        <label asp-for="Password" class="auth-label">
                            <i class="fas fa-lock"></i> New Password
                        </label>
                        <input asp-for="Password" class="auth-input" placeholder="Enter a new password" />
                        <span asp-validation-for="Password" class="auth-error"></span>
                    </div>

                    <div class="auth-form-group">
                        <label asp-for="ConfirmPassword" class="auth-label">
                            <i class="fas fa-check-circle"></i> Confirm Password
                        </label>
                        <input asp-for="ConfirmPassword" class="auth-input" placeholder="Re-enter your password" />
                        <span asp-validation-for="ConfirmPassword" class="auth-error"></span>
                    </div>

                    <button type="submit" class="btn-auth-primary">
                        <i class="fas fa-save me-2"></i> Reset Password
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
